{
  "manifest_version": 3,
  "name": "YouTube Adjusted Time Remaining",
  "version": "2.1",
  "description": "Displays the time remaining at current playback speed on YouTube videos.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*"
      ],
      "js": ["dist/content.js"],
      "run_at": "document_end"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "youtubetime@example.com"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "background": {
    "scripts": ["background.js"]
  }
} 